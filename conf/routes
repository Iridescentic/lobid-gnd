# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /authorities                controllers.HomeController.index

GET     /authorities/api            controllers.HomeController.api

GET     /authorities/context.jsonld controllers.HomeController.context()

GET     /authorities/search         controllers.HomeController.search(q ?= "*", from: Int ?= 0, size: Int ?= 10, format ?= null)

GET     /authorities/:id.:format           controllers.HomeController.authorityDotFormat(id, format)

GET     /authorities/:id                   controllers.HomeController.authority(id, format ?= null)

# Map static resources from the /public folder to the /assets URL path
GET     /authorities/assets/*file   controllers.Assets.versioned(path="/public", file: Asset)
