# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /authorities                controllers.HomeController.index

GET     /authorities/context.jsonld controllers.HomeController.context()

GET     /authorities/:id.json       controllers.HomeController.authority(id)

# Map static resources from the /public folder to the /assets URL path
GET     /authorities/assets/*file   controllers.Assets.versioned(path="/public", file: Asset)
