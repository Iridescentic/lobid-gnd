{
	"settings": {
		"index": {
			"max_result_window": "25000",
			"analysis": {
				"analyzer": {
					"default": {
						"type" : "custom",
						"tokenizer" : "standard",
						"filter": ["lowercase", "german_filter"]
					},
					"autocomplete": {
						"tokenizer": "edge_ngram_tokenizer",
						"filter": ["lowercase", "german_filter"]
					}, 
					"id": {
						"tokenizer": "keyword",
						"filter": "lowercase"
					}
				}, 
				"tokenizer": {
					"edge_ngram_tokenizer": {
						"type": "edgeNGram", 
						"min_gram": "1", 
						"max_gram": "40", 
						"token_chars": [
							"letter", 
							"digit"
						]
					}
				},
				"filter" : {
					"german_filter" : {
						"type" : "snowball",
						"language" : "German2"
					}
				}
			}
		}
	}, 
	"mappings": {
		"authority": {
			"date_detection" : false,
			"dynamic_templates": [
				{
					"id_subfields": {
						"path_match": "*.id",
						"mapping": {
							"type": "keyword",
							"index": true
						}
					}
				}
			],
			"properties": {
				"@context": {
					"type": "keyword",
					"include_in_all": false,
					"index": false
				},
				"id": {
					"type": "keyword",
					"index": true
				},
				"gndIdentifier": {
					"type": "keyword",
					"index": true
				},
				"dateOfBirth": {
					"type": "keyword",
					"index": true
				},
				"type" : {
					"type": "keyword",
					"index": true
				},
				"preferredName": {
					"type": "text",
					"fields": {
						"ngrams": {
							"type": "text",
							"analyzer": "autocomplete",
							"search_analyzer": "autocomplete"
						}
					}
				}, 
				"variantName": {
					"type": "text",
					"fields": {
						"ngrams": {
							"type": "text",
							"analyzer": "autocomplete",
							"search_analyzer": "autocomplete"
						}
					}
				}
			}
		}
	}
}
